[user]
	email = tmangner@inoxio.de
	name = Torsten Mangner
[alias]
	st = status --short
	ci = commit -v
	co = checkout
	br = branch
	lg = log --color --graph --pretty=format:'%C(bold blue)%h%C(reset) - %C(bold green)%cr%C(reset) %s %C(bold white)â€” %an%C(yellow)%d' --abbrev-commit
[color]
	ui = always
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	autocrlf = input
	editor = subl -w
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset

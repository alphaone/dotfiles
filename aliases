# LISTING
alias ls='ls -h --color --time-style=long-iso --block-size=M'
alias l='ls -l'
alias ll='ls -lA'
alias lt='ls -lt'


# GIT
# even though the git plugin of oh-my-zsh brings these, i have to tweak them:
alias gup='git smart-pull'
alias gm='git smart-merge'
alias gl='git smart-log'


# MYSQL
alias mysql-start="sudo -u mysql -b /usr/local/mysql/bin/mysqld_safe"
alias mysql-stop="mysqladmin -u root -p shutdown"
